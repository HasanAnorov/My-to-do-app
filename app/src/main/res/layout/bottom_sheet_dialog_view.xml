<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_parent_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/add_button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/bottom_sheet_dialog_background"
        app:layout_constraintTop_toTopOf="parent"
        android:text="New task"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/sort_by_name"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/bottom_sheet_dialog_background"
        app:layout_constraintTop_toBottomOf="@id/add_button"
        android:text="Sort by name"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/sort_by_priority"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/bottom_sheet_dialog_background"
        app:layout_constraintTop_toBottomOf="@id/sort_by_name"
        android:text="Sort by priority"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>